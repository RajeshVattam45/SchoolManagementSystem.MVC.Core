@model SchoolManagement.Core.Entites.Models.Student

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%;">
        <h2>Are you sure you want to delete this student?</h2>
        <p>@Model.FirstName @Model.LastName</p>
        <form asp-action="Delete" asp-controller="Student">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="DisplayStudent" class="btn btn-primary" asp-controller="Student">Cancle</a>
        </form>
    </div>
</div>

<a class="btn btn-primary" asp-action="StudentList">Cancel</a>
