@model SchoolManagement.Core.ViewModels.AssignSubjectToExamViewModel

@{
    ViewData["Title"] = "Assign Subjects to Exam";
}

<h2>Assign Subjects to Exam</h2>

<form asp-action="AssignSubjects" method="post">
    <div class="form-group">
        <label for="SelectedExamId">Select Exam</label>
        <select asp-for="SelectedExamId" asp-items="Model.ExamList" class="form-control">
            <option value="">-- Select Exam --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Select Subjects</label>
        @foreach (var subject in Model.Subjects)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedSubjectIds" value="@subject.SubjectId" id="subject_@subject.SubjectId">
                <label class="form-check-label" for="subject_@subject.SubjectId">
                    @subject.SubjectName
                </label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Assign Subjects</button>
</form>
