@model SchoolManagement.Core.Entites.Models.ExamSchedule
@await Html.PartialAsync("_ExamDependencyInfo")

@{
    ViewData["Title"] = "Delete Exam Schedule";
}

<h2>Delete Exam Schedule</h2>

<h3>Are you sure you want to delete this schedule?</h3>

<div>
    <h4>Exam Schedule</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Exam Date
        </dt>
        <dd class="col-sm-10">
            @Model.ExamDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Room Number
        </dt>
        <dd class="col-sm-10">
            @Model.RoomNumber
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ScheduleId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
