@model SchoolManagement.Core.Entites.Models.ExamSchedule
@await Html.PartialAsync("_ExamDependencyInfo")

@{
    ViewData["Title"] = "Edit Exam Schedule";
}

<h2>Edit Exam Schedule</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ScheduleId" />

    <div class="form-group">
        <label asp-for="ExamId"></label>
        <select asp-for="ExamId" class="form-control" asp-items="ViewBag.ExamList">
            <option value="">-- Select Exam --</option>
        </select>
        <span asp-validation-for="ExamId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClassId"></label>
        <select asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassList">
            <option value="">-- Select Class --</option>
        </select>
        <span asp-validation-for="ClassId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubjectId"></label>
        <input asp-for="SubjectId" id="SubjectId" />
        @* <select asp-for="SubjectId" class="form-control" id="SubjectId" > *@
        @*     <option value="">-- Select Subject --</option> *@
        @* </select> *@
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExamDate"></label>
        <input asp-for="ExamDate" class="form-control" type="date" />
        <span asp-validation-for="ExamDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" type="time" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" class="form-control" type="time" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomNumber"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>

</form>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const examSelect = document.querySelector('#ExamId');
            const subjectSelect = document.querySelector('#SubjectId');
            const loadingIndicator = document.createElement('span');
            loadingIndicator.id = 'subjectLoading';
            loadingIndicator.textContent = 'Loading subjects...';
            loadingIndicator.style.display = 'none';
            subjectSelect.parentNode.appendChild(loadingIndicator);

            const loadSubjects = (selectedExamId, selectedSubjectId = null) => {
                if (!selectedExamId) return;

                loadingIndicator.style.display = 'inline';
                subjectSelect.innerHTML = '<option value="">-- Select Subject --</option>';

                fetch(`/ExamScheduleMvc/GetSubjectsByExamId?examId=${selectedExamId}`)
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(subject => {
                            const option = document.createElement('option');
                            option.value = subject.id;
                            option.text = subject.subjectName;

                            if (selectedSubjectId && subject.id === parseInt(selectedSubjectId)) {
                                option.selected = true;
                            }

                            subjectSelect.appendChild(option);
                        });
                    })
                    .catch(error => {
                        console.error('Failed to load subjects:', error);
                        alert('Error loading subjects');
                    })
                    .finally(() => {
                        loadingIndicator.style.display = 'none';
                    });
            };

            // 🔁 Load subjects on Exam selection change
            examSelect.addEventListener('change', function () {
                loadSubjects(this.value);
            });

            // ✅ Auto-load subjects on page load using current values from model
            const initialExamId = examSelect.value;
            const initialSubjectId = subjectSelect.getAttribute('data-initial');
            if (initialExamId) {
                loadSubjects(initialExamId, initialSubjectId);
            }
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

