@model SchoolManagement.Core.Entites.Models.ExamSchedule
@await Html.PartialAsync("_ExamDependencyInfo")

@{
    ViewData["Title"] = "Edit Exam Schedule";
}

<h2>Edit Exam Schedule</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ScheduleId" />

    <div class="form-group">
        <label asp-for="ExamId"></label>
        <select asp-for="ExamId" class="form-control" asp-items="ViewBag.ExamList">
            <option value="">-- Select Exam --</option>
        </select>
        <span asp-validation-for="ExamId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClassId"></label>
        <select asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassList">
            <option value="">-- Select Class --</option>
        </select>
        <span asp-validation-for="ClassId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubjectId"></label>
        <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectList">
            <option value="">-- Select Subject --</option>
        </select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExamDate"></label>
        <input asp-for="ExamDate" class="form-control" type="date" />
        <span asp-validation-for="ExamDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" type="time" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" class="form-control" type="time" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomNumber"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
