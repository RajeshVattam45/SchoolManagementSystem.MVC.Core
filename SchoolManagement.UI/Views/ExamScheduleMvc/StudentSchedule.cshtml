@model IEnumerable<SchoolManagement.Core.Entites.Models.ExamSchedule>
@{
    ViewData["Title"] = "My Exam Schedule";
    var studentName = ViewBag.StudentName as string ?? "Student";
}

<h2 class="mb-4">Hello, @studentName!</h2>
<h4 class="text-muted mb-4">Here is your upcoming exam schedule</h4>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No exams scheduled for your class at the moment.
    </div>
}
else
{
    <div class="row">
        @foreach (var exam in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">@exam.Subject?.SubjectName ?? "Subject Not Assigned"</h5>
                        <p class="card-text">
                            <strong>Exam Date:</strong> @exam.ExamDate.ToString("dd MMM yyyy")<br />
                            <strong>Start Time:</strong> @exam.StartTime<br />
                            <strong>End Time:</strong> @exam.EndTime<br />
                            <strong>Room:</strong> @exam.RoomNumber
                        </p>
                        <span class="badge bg-primary">Class: @exam.Class?.ClassName</span>
                    </div>
                </div>
            </div>
        }
    </div>
}
