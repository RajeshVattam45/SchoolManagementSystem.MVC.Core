@model SchoolManagement.UI.Controllers.ExamCreateViewModel

<div class="container py-5">
    <h2 class="mb-4 fw-bold text-primary">
        <i class="bi bi-pencil-square me-2"></i> Add Exam
    </h2>

    <form asp-action="Create" method="post" class="p-4 bg-light rounded-4 shadow-sm">
        <div class="row g-4">
            <!-- Exam Name -->
            <div class="col-md-6">
                <label asp-for="Exam.ExamName" class="form-label fw-semibold">
                    <i class="bi bi-card-text me-1"></i> Exam Name
                </label>
                <input asp-for="Exam.ExamName" class="form-control form-control-lg rounded-3" placeholder="Enter exam name" required />
                <span asp-validation-for="Exam.ExamName" class="text-danger small"></span>
            </div>

            <!-- Exam Date -->
            <div class="col-md-6">
                <label asp-for="Exam.ExamDate" class="form-label fw-semibold">
                    <i class="bi bi-calendar-event me-1"></i> Exam Created Date
                </label>
                @* <input asp-for="Exam.ExamDate" type="date" class="form-control form-control-lg rounded-3" required /> *@
                <input type="datetime-local"
                       name="Exam.ExamDate"
                       class="form-control form-control-lg rounded-3"
                       value="@(Model.Exam.ExamDate == DateTime.MinValue
                ? DateTime.Now.ToString("yyyy-MM-ddTHH:mm")
                : Model.Exam.ExamDate.ToString("yyyy-MM-ddTHH:mm"))"
                       required />
                <span asp-validation-for="Exam.ExamDate" class="text-danger small"></span>
            </div>

            <!-- Exam Type -->
            <div class="col-md-6">
                <label asp-for="Exam.ExamTypeId" class="form-label fw-semibold">
                    <i class="bi bi-tags me-1"></i> Exam Type
                </label>
                <select asp-for="Exam.ExamTypeId" asp-items="ViewBag.ExamTypes" class="form-select form-select-lg rounded-3">
                    <option value="">-- Select Exam Type --</option>
                </select>
                <span asp-validation-for="Exam.ExamTypeId" class="text-danger small"></span>
            </div>

            <!-- Subjects Multi-Select -->
            <div class="col-md-6">
                <label asp-for="SelectedSubjectIds" class="form-label fw-semibold">
                    <i class="bi bi-journal-text me-1"></i> Subjects
                </label>
                <select asp-for="SelectedSubjectIds" asp-items="Model.Subjects" class="form-select form-select-lg rounded-3" multiple required></select>
                <span asp-validation-for="SelectedSubjectIds" class="text-danger small"></span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-end mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary me-2 px-4 rounded-pill">
                <i class="bi bi-arrow-left-circle me-1"></i> Back
            </a>
            <button type="submit" class="btn btn-success px-4 rounded-pill">
                <i class="bi bi-save me-1"></i> Save
            </button>
        </div>
    </form>
</div>