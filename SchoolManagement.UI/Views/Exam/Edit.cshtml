@model SchoolManagement.Core.Entites.Models.Exam

@{
    ViewData["Title"] = "Edit Exam";
}
<div class="contact mt-5">

    <h2>Edit Exam</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ExamId" />
        <div class="form-group">
            <label asp-for="ExamName"></label>
            <input asp-for="ExamName" class="form-control" />
            <span asp-validation-for="ExamName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ExamDate"></label>
            <input asp-for="ExamDate" type="date" class="form-control" />
            <span asp-validation-for="ExamDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ExamTypeId" class="control-label"></label>
            <select asp-for="ExamTypeId" asp-items="ViewBag.ExamTypes" class="form-control">
                <option value="">-- Select Exam Type --</option>
            </select>
            <span asp-validation-for="ExamTypeId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
