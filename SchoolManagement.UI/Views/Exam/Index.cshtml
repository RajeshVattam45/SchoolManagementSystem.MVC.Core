@model IEnumerable<SchoolManagement.Core.Entites.Models.Exam>


<div class="container mt-3 py-4">
    @await Html.PartialAsync("_ExamDependencyInfo")

    <div class="d-flex justify-content-between align-items-center mb-4 mt-3">
        <h2 class="mb-0 fw-bold text-primary">
            <i class="bi bi-journal-text me-2"></i>Exam List
        </h2>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add Exam
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info d-flex align-items-center shadow-sm rounded-3 p-3">
            <i class="bi bi-info-circle-fill fs-4 me-2 text-primary"></i>
            <div>No exams found. Please add an exam to get started.</div>
        </div>
    }
    else
    {
        var groupedExams = Model.GroupBy(e => e.ExamType.ExamTypeName);
        var accordionId = "examAccordion";

        <div class="accordion" id="@accordionId">
            @foreach (var group in groupedExams)
            {
                // Sanitize the group key to make it a valid ID (remove spaces and replace invalid characters)
                var sanitizedKey = group.Key.Replace(" ", "").Replace("(", "").Replace(")", "");
                var headingId = $"heading-{sanitizedKey}";
                var collapseId = $"collapse-{sanitizedKey}";

                <div class="accordion-item border-0 shadow-sm mb-3 rounded-4">
                    <h2 class="accordion-header" id="@headingId">
                        <button class="accordion-button collapsed fw-bold text-primary" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                            <i class="bi bi-bookmark-star me-2"></i>@group.Key Exams
                        </button>
                    </h2>
                    <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId" data-bs-parent="#@accordionId">
                        <div class="accordion-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th><i class="bi bi-card-text me-1 text-muted"></i> Exam Name</th>
                                            <th><i class="bi bi-calendar-event me-1 text-muted"></i> Date</th>
                                            <th class="text-end"><i class="bi bi-gear me-1 text-muted"></i> Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var exam in group)
                                        {
                                            <tr>
                                                <td class="fw-semibold">@exam.ExamName</td>
                                                <td>
                                                    <span class="badge bg-info-subtle text-dark px-3 py-2 rounded-pill">
                                                        <i class="bi bi-calendar3 me-1"></i> @exam.ExamDate.ToString("dd-MM-yyyy")
                                                    </span>
                                                </td>
                                                <td class="text-end">
                                                    <div class="btn-group">
                                                        <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                            Actions
                                                        </button>
                                                        <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                                            <li>
                                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@exam.ExamId">
                                                                    <i class="bi bi-pencil-square me-1"></i> Edit
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@exam.ExamId">
                                                                    <i class="bi bi-trash me-1"></i> Delete
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
