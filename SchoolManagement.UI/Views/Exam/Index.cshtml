@model IEnumerable<SchoolManagement.Core.Entites.Models.Exam>

@await Html.PartialAsync("_ExamDependencyInfo")

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 fw-bold text-primary">
            <i class="bi bi-journal-text me-2"></i>Exam List
        </h2>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add Exam
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info d-flex align-items-center shadow-sm rounded-3 p-3">
            <i class="bi bi-info-circle-fill fs-4 me-2 text-primary"></i>
            <div>No exams found. Please add an exam to get started.</div>
        </div>
    }
    else
    {
        <div class="card shadow-sm rounded-4 border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th><i class="bi bi-card-text me-1 text-muted"></i> Exam Name</th>
                                <th><i class="bi bi-calendar-event me-1 text-muted"></i> Date</th>
                                <th><i class="bi bi-tags me-1 text-muted"></i> Type</th>
                                <th class="text-end"><i class="bi bi-gear me-1 text-muted"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var exam in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@exam.ExamName</td>
                                    <td>
                                        <span class="badge bg-info-subtle text-dark px-3 py-2 rounded-pill">
                                            <i class="bi bi-calendar3 me-1"></i> @exam.ExamDate.ToString("dd-MM-yyyy")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary-subtle text-dark px-3 py-2 rounded-pill">
                                            <i class="bi bi-bookmark-star me-1"></i> @exam.ExamType.ExamTypeName
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                Actions
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                                <li>
                                                    <a class="dropdown-item" asp-action="Edit" asp-route-id="@exam.ExamId">
                                                        <i class="bi bi-pencil-square me-1"></i> Edit
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@exam.ExamId">
                                                        <i class="bi bi-trash me-1"></i> Delete
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
