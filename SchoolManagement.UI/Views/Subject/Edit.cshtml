@model SchoolManagement.Core.Entites.Models.Subject

<div class="container m-3">

    <h2>Edit Subject</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label>Subject ID</label>
            <input asp-for="SubjectId" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Subject Name</label>
            <input asp-for="SubjectName" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Assign to Teacher</label>
            <select asp-for="EmployeeId" class="form-control" required>
                <option value="">Select a Teacher</option>
                @foreach (var emp in ViewBag.Employees as List<SchoolManagement.Core.Entites.Models.Employee>)
                {
                    <option value="@emp.Id" selected="@(Model.EmployeeId == emp.Id ? "selected" : null)">
                        @emp.FirstName @emp.LastName
                    </option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>
