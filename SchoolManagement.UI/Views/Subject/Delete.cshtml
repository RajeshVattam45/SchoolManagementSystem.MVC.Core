@model SchoolManagement.Core.Entites.Models.Subject

@{
    ViewData["Title"] = "Delete Subject";
}

<div class="container m-3">

    <h2>Delete Subject</h2>

    <h3>Are you sure you want to delete this subject?</h3>

    <div>
        <h4>@Model.SubjectName</h4>
        <p>Assigned Teacher: @Model.Employee?.FirstName @Model.Employee?.LastName</p>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>

    <a asp-action="Index">Cancel</a>
</div>
