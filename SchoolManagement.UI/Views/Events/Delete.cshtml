@model SchoolManagement.Core.Entites.Models.Events

@{
    ViewData["Title"] = "Delete Event";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Event</h2>
    <p>Are you sure you want to delete this event?</p>

    <div class="card border-danger mb-4">
        <div class="card-body">
            <h5 class="card-title">@Model.EventName</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.EventDate.ToString("MMMM dd, yyyy")</h6>
            <p class="card-text">@Model.EventDescription</p>
            <p><strong>Organized By:</strong> @Model.OrganizedBy</p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
