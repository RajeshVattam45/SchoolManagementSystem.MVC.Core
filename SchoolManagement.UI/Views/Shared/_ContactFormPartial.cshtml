@model SchoolManagement.Core.RepositoryInterfaces.ContactRequestDto

<!-- Title and Description -->
<div class="text-center mb-5">
    <h2 class="fw-bold text-success">Let's Connect – We're Here to Help!</h2>
    <p class="text-muted lead">
        Have questions or need assistance? Whether you're looking for support, have inquiries about our services, or just want to say hello, we're here to listen. Reach out to us, and let's start a conversation!
    </p>
</div>

<div class="row m-4">
    <!-- Contact Info Section -->
    <div class="col-md-4">
        <div class="p-4 bg-light rounded">
            <div class="d-flex align-items-center mb-3">
                <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                    <i class="fas fa-map-marker-alt fs-5"></i>
                </div>
                <div>
                    <h5 class="fw-bold mb-1">Address</h5>
                    <p class="mb-0 text-muted">A108 Adam Street, New York, NY 535022</p>
                </div>
            </div>

            <div class="d-flex align-items-center mb-3">
                <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                    <i class="fas fa-phone fs-5"></i>
                </div>
                <div>
                    <h5 class="fw-bold mb-1">Call Us</h5>
                    <p class="mb-0 text-muted">+1 5589 55488 55</p>
                </div>
            </div>

            <div class="d-flex align-items-center">
                <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                    <i class="fas fa-envelope fs-5"></i>
                </div>
                <div>
                    <h5 class="fw-bold mb-1">Email Us</h5>
                    <p class="mb-0 text-muted">info@example.com</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Form Section -->
    <div class="col-md-8">
        <form asp-controller="ContactUs" asp-action="Submit" method="post">
            @Html.AntiForgeryToken()

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control bg-dark text-white border-0 shadow-sm" placeholder="Your Name" required />
                        <label asp-for="Name" class="text-muted"></label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Email" class="form-control bg-dark text-white border-0 shadow-sm" placeholder="Your Email" required />
                        <label asp-for="Email" class="text-muted"></label>
                    </div>
                </div>
            </div>

            @* <div class="mt-4"> *@
            @*     <div class="form-floating"> *@
            @*         <input asp-for="Subject" class="form-control bg-dark text-white border-0 shadow-sm" placeholder="Subject" required /> *@
            @*         <label asp-for="Subject" class="text-muted"></label> *@
            @*     </div> *@
            @* </div> *@

            <div class="mt-4">
                <div class="form-floating">
                    <textarea asp-for="Message" class="form-control bg-dark text-white border-0 shadow-sm" placeholder="Message" style="height: 180px;" required></textarea>
                    <label asp-for="Message" class="text-muted"></label>
                </div>
            </div>

            <div class="mt-4 text-center">
                <button type="submit" asp-action="Submit" asp-controller="ContactUs" class="btn btn-success btn-lg px-5 shadow">
                    <i class="fas fa-paper-plane me-2"></i> Send Message
                </button>
            </div>
        </form>
    </div>
</div>